    <style>
        .sidebar {
            position: absolute;
            top: 0;
            width: 200px;
            display: flex;
            flex-wrap: wrap;
            height: 920px;
            background-color: gray;
        }

        .sidebar-li {
            text-decoration: none;
            list-style-type: none;
        }

        .btn_li {
            width: 100%;
        }

        .h3_li {
            margin: 0;
            width: 100%;
            padding: 10px 0px;
            height: 20px;
            background-color: aliceblue;
            text-align: center;
            justify-content: center;
        }

        .btn-active-on {
            background-color: black;
            color: aliceblue;
        }

        .form_mat {
            width: 925px;
        }

        .input_mat {
            width: 750px;
            padding: 10px 16px;
            border-radius: 30px;
            border: 1px solid gray;
            outline: none;
        }

        /* Sidebar chung */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #343a40;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .sidebar ul {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .sidebar ul li {
            position: relative;
            margin-bottom: 15px;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: #ccc;
            font-size: 16px;
            display: flex;
            align-items: center;
            padding: 10px;
            transition: all 0.3s;
            border-radius: 5px;
        }

        .sidebar ul li a:hover {
            background-color: #495057;
            color: #fff;
        }

        /* Submenu */
        .sidebar ul li.has-submenu>.submenu {
            display: none;
            position: absolute;
            /* Đặt position */
            top: 0;
            left: 100%;
            /* Đẩy submenu ra ngoài sidebar */
            background-color: #495057;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            z-index: 10050;
            /* Đảm bảo menu con nằm phía trên */
        }

        .sidebar ul li.has-submenu:hover>.submenu {
            display: block;
        }

        .sidebar ul li .submenu li {
            margin-bottom: 10px;
        }

        .sidebar ul li .submenu li a {
            font-size: 14px;
            color: #fff;
        }

        .sidebar ul li .submenu li a:hover {
            color: #ffc107;
        }

        /* Hiệu ứng khi body được đẩy sang phải */
        body {
            margin-left: 250px;
            transition: all 0.3s;
        }
    </style>
